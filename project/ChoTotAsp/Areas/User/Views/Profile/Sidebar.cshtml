@model ChoTotAsp.Areas.User.ViewModel.ProfileViewModel
@{
    var currentUrl = Context.Request.Path;
    var splitUrl = currentUrl.Split('/').Last();
}
<aside class="col-lg-4 col-md-5 pe-xl-4 mb-5">
    <!-- Account nav-->
    <div class="card card-body card-light border-0 shadow-sm pb-1 me-lg-1">
        <div class="d-flex d-md-block d-lg-flex align-items-start pt-lg-2 mb-4">
            <img class="rounded-circle" src="data:image/png;base64,@Model.CurrentUser.avatar"
                 width="48" alt="@Model.CurrentUser.email">
            <div class="pt-md-2 pt-lg-0 ps-3 ps-md-0 ps-lg-3">
                <h2 class="fs-lg text-light mb-0">@Model.CurrentUser.email</h2>
                <span class="star-rating">
                    <i class="star-rating-icon fi-star-filled active"></i>
                    <i class="star-rating-icon fi-star-filled active"></i>
                    <i class="star-rating-icon fi-star-filled active"></i>
                    <i class="star-rating-icon fi-star-filled active"></i>
                    <i class="star-rating-icon fi-star-filled active"></i>
                </span>
                <ul class="list-unstyled fs-sm mt-3 mb-0">
                    <li>
                        <a class="nav-link-light fw-normal" href="mailto:@Model.CurrentUser.email">
                            <i class="fi-mail opacity-60 me-2"></i>@Model.CurrentUser.email
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <a class="btn btn-primary btn-lg w-100 mb-3" href="/User/Post">
            <i class="fi-plus me-2"></i>Đăng tin
        </a>
        <a class="btn btn-outline-light d-block d-md-none w-100 mb-3"
           href="#account-nav" data-bs-toggle="collapse">
            <i class="fi-align-justify me-2"></i>Chức năng
        </a>
        <div class="collapse d-md-block mt-3" id="account-nav">
            <div class="card-nav">
                <a class="card-nav-link @(string.IsNullOrWhiteSpace(splitUrl) ? "active"  : "")" href="/user/Profile"><i class="fi-user me-2"></i>Thông tin cá nhân</a>
                <a class="card-nav-link @(currentUrl.Contains("Security") ? "active"  : "")" href="/User/Profile/Security"><i class="fi-lock me-2"></i>Mật khẩu &amp; Bảo mật</a>
                <a class="card-nav-link @(currentUrl.Contains("Post") ? "active"  : "")" href="/user/Profile/Post">
                    <i class="fi-car me-2"></i>
                    Bài đăng của tôi <span class="badge bg-faded-light ms-2">@Model.TotalPost</span>
                </a>
                <a class="card-nav-link @(currentUrl.Contains("WishList") ? "active"  : "")" href="/User/Profile/WishList">
                    <i class="fi-heart me-2"></i>
                    Yêu thích<span class="badge bg-faded-light ms-2">@Model.TotalWishList</span>
                </a>
                <a class="card-nav-link @(currentUrl.Contains("Message") ? "active"  : "")" href="/User/Profile/Message">
                    <i class="fi-messenger me-2"></i>
                    Nhắn tin
                </a>
                <a class="card-nav-link" href="/User/Logout"><i class="fi-logout me-2"></i>Đăng xuất</a>
            </div>
        </div>
    </div>
</aside>