@model ChoTotAsp.Entity.category

@{
    ViewBag.Title = "Thêm Loại Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thêm Loại Sản Phẩm</h2>

@using (Html.BeginForm("Create", "CategoryManagement", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.category_name, "Tên loại sản phẩm")
        @Html.TextBoxFor(m => m.category_name, new { @class = "form-control", placeholder = "Nhập tên loại sản phẩm" })
        @Html.ValidationMessageFor(m => m.category_name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Ảnh đại diện")
        <input type="file" name="imageFile" class="form-control"/>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.status, "Trạng thái")
        @Html.DropDownListFor(m => m.status,
            new SelectList(new[]
            {
                new { Value = "active", Text = "Active" },
                new { Value = "inactive", Text = "Inactive" }
            }, "Value", "Text", Model?.status ?? "active"),
            "-- Chọn trạng thái --",
            new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Ngày tạo</label>
        <input type="text" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" class="form-control" readonly/>
    </div>

    <div class="form-group">
        <label>Ngày cập nhật</label>
        <input type="text" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" class="form-control" readonly/>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a href="@Url.Action("Index", "Categories")" class="btn btn-secondary">Hủy</a>
}